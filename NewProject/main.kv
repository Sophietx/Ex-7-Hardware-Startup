<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'go to joystick screen'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0.5, 1, 0.7, 1
        on_press: root.transition(test_button)


    DPEAButton:
        id: test2_button
        text: 'yo mama'
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0.3, 0.5, 1
        on_press: root.pressed(test2_button)

    DPEAButton:
        id: test3_button
        text: str(root.press_count)
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.75
        color: 0.3, 0.5, 0.7, 1



    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'
        size_hint: None, None
        size: 200, 30  # Adjust size as needed
        pos: root.width * 0.5 - self.width / 2, root.height * 0.1


    Label:
        id: slider_label
        text: 'position'
        center_x: root.width * 0.5
        center_y: root.height * 0.6


    DPEAButton:
        id: test4_button
        text: str(slider.value)
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.25
        color: 1, 0.7, 0.7, 1

    ImageButton:
        id: btn
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.animation(btn)







