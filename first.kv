<FirstScreen>:
    #: import time __main__.time

    name: 'first'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: button_one
        text: 'on'
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.whatsgoingon(button_one)

    DPEAButton:
        id: button_two
        text: 'off'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.whatsgoingon(button_two)

    DPEAButton:
        id: button_three
        text: 'change direction'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 0, 0, 1, 1
        on_press: root.whatsgoingon(button_three)


    Slider:
        id: slider_id
        min: 0
        max: 10
        step: 1
        orientation: 'horizontal'
        size_hint: None, None
        size: 200, 30  # Adjust size as needed
        pos: root.width * 0.5 - self.width / 2, root.height * 0.1
        on_touch_move: root.sliding()
        on_touch_down: root.sliding()

    DPEAButton:
        id: button_four
        text: 'womp womp'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.25
        color: 0, 0, 0, 1
        on_press: root.danceydance(button_four)